<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:id="@+id/img_logo"
            android:background="@mipmap/dxlogo"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            ></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bem vindo(a) a Developer Experience"
            android:id="@+id/txt_bem_vindo"
            android:textAlignment="textStart"
            android:textSize="25sp"
            android:layout_toRightOf="@id/img_logo"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            ></TextView>

        <ImageView
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:id="@+id/img_login"
            android:background="@mipmap/dx_imglogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"

            ></ImageView>

        <EditText
            android:layout_below="@id/img_login"
            android:layout_width="370dp"
            android:layout_height="52dp"
            android:hint="Email"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edittext"
            android:textColor="@color/black"
            android:id="@+id/et_email"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:padding="5dp"

            />

        <EditText
            android:layout_below="@id/et_email"
            android:layout_width="370dp"
            android:layout_height="57dp"
            android:hint="Senha"
            android:textSize="16sp"
            android:textColorHint="@color/black"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edittext"
            android:id="@+id/et_senha"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="8dp"
            android:padding="5dp"
            />


        <Button
            android:layout_width="370dp"
            android:layout_height="52dp"
            android:textSize="16sp"
            android:text="Login"
            android:onClick="validarAutenticacao"
            android:layout_below="@id/et_senha"
            android:id="@+id/btn_Login"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#9747FF"
            android:layout_marginTop="16dp"
            android:textAllCaps="false"
            />

        <Button
            android:layout_width="370dp"
            android:layout_height="52dp"
            android:textSize="16sp"
            android:text="Cadastre-se"
            android:onClick="Cadastrar"
            android:layout_below="@id/btn_Login"
            android:id="@+id/btn_cadastro"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#9747FF"
            android:textAllCaps="false"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tv_autenticacao"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/et_senha"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>