    <RelativeLayout
        android:id="@+id/card_vaga"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/img_card"
            android:background="@color/white"
            android:foregroundGravity="center"
            ></ImageView>

        <ImageView
            android:id="@+id/img_logo_empresa"
            android:layout_width="170dp"
            android:layout_height="158dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/rounded_edittext"
            ></ImageView>


        <TextView
            android:id="@+id/txt_nome_empresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/img_logo_empresa"
            android:text="Safra"
            android:textColor="@color/vagas_text_color"
            android:textSize="22dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nome_empresa"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/img_logo_empresa"
            android:textColor="@color/vagas_text_color"
            android:textSize="16dp"
            android:id="@+id/txt_sobreNos"
            android:text="Sobre nós:"
            android:textStyle="bold"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_sobreNos"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/img_logo_empresa"
            android:layout_marginTop="32dp"
            android:textColor="@color/vagas_text_color"
            android:textSize="16dp"
            android:id="@+id/txt_numero_funcionario"
            android:text="Número de funcionários:"
            android:textStyle="bold"
            ></TextView>




    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>