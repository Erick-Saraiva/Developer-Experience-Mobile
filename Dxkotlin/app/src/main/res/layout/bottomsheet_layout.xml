<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    >


    <Button
        android:id="@+id/btn_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/baseline_arrow_back_ios_new_24"
        android:layout_alignBaseline="@+id/txt_publicar_vaga"
        ></Button>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicar vaga"
        android:textSize="28sp"
        android:id="@+id/txt_publicar_vaga"
        android:textColor="@color/black_ground"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        ></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/txt_titulo_vaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textColor="@color/black"
            android:textSize="24dp"
            ></TextView>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:hint="Título"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:background="@drawable/rounded_edittext"
                android:textColor="@color/black"
                android:id="@+id/et_titulo"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:padding="5dp"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:id="@+id/txt_nome"

            ></TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:hint="Vaga desenvolvedor Kotlin"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext"
            android:textColor="@color/black"
            android:id="@+id/et_descricao_vaga"
            android:drawablePadding="8dp"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linguagem"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:id="@+id/txt_email"
            ></TextView>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:hint="Kotlin"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext"
            android:textColor="@color/black"
            android:id="@+id/et_linguagem"
            android:drawablePadding="8dp"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salario"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:id="@+id/txt_cpf"

            ></TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:hint="R$4.000"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext"
            android:textColor="@color/black"
            android:id="@+id/et_salario"
            android:drawablePadding="8dp"
            android:inputType="textPostalAddress"
            android:padding="5dp"
            android:layout_below="@id/et_nome"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senioridade"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:id="@+id/txt_senioridade"
            ></TextView>

        <EditText
            android:id="@+id/et_senioridade"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@id/et_senha"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:drawablePadding="8dp"
            android:hint="Junior"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp" />

        <Button
            android:layout_width="370dp"
            android:layout_height="52dp"
            android:textSize="16sp"
            android:text="@string/registrar"
            android:layout_below="@id/et_senioridade"
            android:backgroundTint="#9747FF"
            android:layout_marginTop="16dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:onClick="cadastrarVaga"

            />

    </LinearLayout>

</RelativeLayout>

